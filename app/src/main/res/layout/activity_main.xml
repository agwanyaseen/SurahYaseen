<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">
    <TextView
            android:text="ENGLISH"
            android:layout_width="wrap_content"
            android:layout_height="38dp" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentTop="true" android:layout_marginTop="22dp"
            android:id="@+id/english" tools:text="ENGLISH"
            android:textColor="@color/colorGreen"
            android:textSize="24sp"/>
    <TextView
            android:text="   ગુજરાતી"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:textColor="@color/colorGreen"
            android:layout_alignTop="@+id/english"
            android:id="@+id/gujarati"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="أربي"
            android:layout_width="75dp"
            android:textColor="@color/colorGreen"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:layout_alignTop="@+id/gujarati"
            android:id="@+id/arabi" android:textSize="24sp"/>

</RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/innetr"
                    android:background="@drawable/madeenashareef"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80sp">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:id="@+id/surah_yaseen"
                      android:textSize="30sp"
                      android:textColor="@color/colorAccent"/>

        </ScrollView>
    </RelativeLayout>


</RelativeLayout>
